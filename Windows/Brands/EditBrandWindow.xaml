<Window x:Class="IntercityTransportation.Windows.Brands.EditBrandWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IntercityTransportation.Windows.Brands"
        mc:Ignorable="d"
        Title="Редактирование марки" Height="450" Width="800">
    <StackPanel Orientation="Horizontal" Margin="10 10 10 10">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Название марки:" HorizontalAlignment="Left" VerticalAlignment="Center" Width="160" />
                    <TextBox TextWrapping="Wrap" VerticalAlignment="Center" Width="120"
                         Text="{Binding Path=Brand.Name}" />
                </StackPanel>
            <Button Content="Сохранить" Click="SaveBrandButton_Click" Cursor="Hand" Width="120" Margin="0 10 0 0"/>
            </StackPanel>
    </StackPanel>
</Window>
